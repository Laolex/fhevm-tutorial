{
    "name": "hello-fhevm-tutorial",
    "version": "1.0.0",
    "description": "A beginner-friendly tutorial for building your first confidential dApp using FHEVM",
    "main": "index.js",
    "scripts": {
        "compile": "hardhat compile",
        "test": "hardhat test",
        "test:unit": "hardhat test test/*.unit.test.ts",
        "test:enhanced": "hardhat test test/SecretGameMasterEnhanced.test.ts",
        "test:v2": "hardhat test test/SecretGameMasterV2.test.ts",
        "test:coverage": "hardhat coverage",
        "test:fhevm": "hardhat test test/FHEVM-Integration.test.ts",
        "deploy:sepolia": "hardhat run scripts/deploy-game-master.ts --network sepolia",
        "deploy:sepolia:v2": "hardhat run scripts/deploy-game-master-v2.ts --network sepolia",
        "deploy:mainnet:v2": "hardhat run scripts/deploy-game-master-v2.ts --network mainnet",
        "deploy:enhanced": "hardhat run scripts/deploy-enhanced.ts --network sepolia",
        "deploy:zama": "hardhat run scripts/deploy-game-master.ts --network zama-testnet",
        "check-fhevm": "hardhat fhevm check-fhevm-compatibility --address",
        "dev": "cd frontend && npm run dev",
        "build": "cd frontend && npm run build",
        "build:production": "npm run compile && cd frontend && npm run build",
        "start": "cd frontend && npm run start",
        "install:all": "npm install && cd frontend && npm install",
        "clean": "hardhat clean && cd frontend && rm -rf node_modules dist",
        "test-game": "hardhat run scripts/test-game.ts",
        "verify": "hardhat run scripts/verify-contract.ts",
        "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
        "type-check": "cd frontend && npm run type-check",
        "lint": "npx solhint 'contracts/**/*.sol'",
        "format": "npx prettier --write 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.ts'"
    },
    "keywords": [
        "fhevm",
        "zama",
        "confidential",
        "blockchain",
        "tutorial",
        "solidity",
        "react"
    ],
    "author": "Your Name",
    "license": "MIT",
    "devDependencies": {
        "@nomicfoundation/hardhat-toolbox": "^4.0.0",
        "@types/node": "^20.0.0",
        "hardhat": "^2.19.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@chainlink/contracts": "^0.8.0",
        "@openzeppelin/contracts": "^5.4.0",
        "dotenv": "^17.2.2",
        "ethers": "^6.0.0",
        "fhevm": "^0.1.13"
    }
}